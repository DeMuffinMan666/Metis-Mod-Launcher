<UserControl x:Class="ModEngine2ConfigTool.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:ModEngine2ConfigTool.Views.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ModEngine2ConfigTool.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <GroupBox Header="Settings">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <controls:TextField Grid.Row="0"
                                Margin="5,10,0,10"
                                FieldActionName="Browse"
                                FieldName="ModEngine2 Path" />
            <controls:TextField Grid.Row="1"
                                Margin="5,10,0,10"
                                FieldActionName="Browse"
                                FieldName="Elden Ring Install Path:" />
        </Grid>
    </GroupBox>
</UserControl>
