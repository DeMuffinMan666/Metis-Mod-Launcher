<UserControl x:Class="ModEngine2ConfigTool.Views.Controls.BoolField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ModEngine2ConfigTool.Views.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="FieldControl"
             MinWidth="300"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="200" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="{Binding FieldName, ElementName=FieldControl}" />
        <CheckBox Grid.Column="2"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Center"
                  IsChecked="{Binding FieldValue, ElementName=FieldControl}" />
    </Grid>
</UserControl>
